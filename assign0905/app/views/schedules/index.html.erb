<h1>Listing schedules</h1>


<h2><a href="/schedules?today=support_id">Today support hero</a></h2> 

<h2><a href="/schedules?order=support_id">Each support's schedule</a> </h2>
<h2><a href="/schedules?order=dateshedule">Schedule for this month</a></h2>


<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Support</th>
      <th>Dateshedule</th>
      <th>Vacation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.support.name %></td>
        <td><%= schedule.dateshedule %></td>
        <td><%= schedule.vacation %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

